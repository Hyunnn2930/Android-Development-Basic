<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBGG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"/>

    <TextView
        android:id="@+id/tvDoaDzikir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:text="Do'a dan Dzikir App"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:src="@drawable/logo_doa"
        android:layout_height="175dp"/>
    <TextView
        android:id="@+id/tvTextt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pilihan Do'a dan Dzikir"
        android:textSize="25dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginStart="27dp"
        android:textColor="#FF9800"
        android:layout_below="@id/ivBGG"
        />
    <Button
        android:id="@+id/ivGambarCuy"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tvTextt"
        android:text="Selengkapnya->"
        android:textColor="@color/black"
        android:backgroundTint="#B5AFAF"
        android:layout_below="@id/ivBGG"
        />

    <ScrollView
        android:id="@+id/svDoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvTextt">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoaDzikir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp">
        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

</RelativeLayout>